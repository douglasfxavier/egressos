<%= form_with(model: student, local: true) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome, :class=>'form-control col-md-5' %>
  </div>

  <div class="field">
    <%= form.label :matricula %>
    <%= form.text_field :matricula, :class=>'form-control col-md-5' %>
  </div>

  <div class="field">
    <%= form.label :ano %>
    <%= form.number_field :ano, :class=>'form-control col-md-5' %>
  </div>

  <div class="field">
    <%= form.label :semestre %>
    <%= form.number_field :semestre, :class=>'form-control col-md-5' %>
  </div>

  <div class="field">
    <%= form.label :senha %>
    <%= form.text_field :senha, :class=>'form-control col-md-5' %>
  </div>

  <div class="field">
    <%= form.label :homologado %>
    <%= form.check_box :homologado %>
  </div>

  <div class="field">
    <%= form.label "Curso:" %>
    <%= collection_select(:student,:course_id, @courses, :id, :nome) %>
  </div>

  <div id="contacts">
    <%= form.fields_for :contacts do |contacts_fields| %>
      <%= render partial: "contact_fields", locals: {f: contacts_fields} %>
    <% end %>

    <%= link_to_add_association("Adicionar",form, :contacts) %>
  </div>

  <div class="actions">
    <%= form.submit 'Cadastrar estudante' %>
  </div>

<% end %>
